{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Population by State",
  "width": 980,
  "height": 420,
  "projection": { "type": "equirectangular" },
  "config": { "view": { "stroke": null } },

  "params": [
    {
      "name": "QuarterSel",
      "value": "2024-25 Q3 (Mar Qtr)",
      "bind": {
        "input": "select",
        "options": [
          "2015-16 Q1 (Sep Qtr)","2015-16 Q2 (Dec Qtr)","2015-16 Q3 (Mar Qtr)","2015-16 Q4 (Jun Qtr)",
          "2016-17 Q1 (Sep Qtr)","2016-17 Q2 (Dec Qtr)","2016-17 Q3 (Mar Qtr)","2016-17 Q4 (Jun Qtr)",
          "2017-18 Q1 (Sep Qtr)","2017-18 Q2 (Dec Qtr)","2017-18 Q3 (Mar Qtr)","2017-18 Q4 (Jun Qtr)",
          "2018-19 Q1 (Sep Qtr)","2018-19 Q2 (Dec Qtr)","2018-19 Q3 (Mar Qtr)","2018-19 Q4 (Jun Qtr)",
          "2019-20 Q1 (Sep Qtr)","2019-20 Q2 (Dec Qtr)","2019-20 Q3 (Mar Qtr)","2019-20 Q4 (Jun Qtr)",
          "2020-21 Q1 (Sep Qtr)","2020-21 Q2 (Dec Qtr)","2020-21 Q3 (Mar Qtr)","2020-21 Q4 (Jun Qtr)",
          "2021-22 Q1 (Sep Qtr)","2021-22 Q2 (Dec Qtr)","2021-22 Q3 (Mar Qtr)","2021-22 Q4 (Jun Qtr)",
          "2022-23 Q1 (Sep Qtr)","2022-23 Q2 (Dec Qtr)","2022-23 Q3 (Mar Qtr)","2022-23 Q4 (Jun Qtr)",
          "2023-24 Q1 (Sep Qtr)","2023-24 Q2 (Dec Qtr)","2023-24 Q3 (Mar Qtr)","2023-24 Q4 (Jun Qtr)",
          "2024-25 Q1 (Sep Qtr)","2024-25 Q2 (Dec Qtr)","2024-25 Q3 (Mar Qtr)"
        ]
      }
    }
  ],

  "data": {
    "url": "https://raw.githubusercontent.com/gabriellapywong/FIT3179-DV2/main/data/population_cleaned.csv",
    "format": { "type": "csv" }
  },

  "transform": [
    { "filter": "datum.p_Quarter === QuarterSel" },

    {
      "lookup": "p_State",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/gabriellapywong/FIT3179-DV2/main/js/au_states_3.json",
          "format": { "type": "topojson", "feature": "STE_2021_AUST_GDA2020" }
        },
        "key": "properties.STE_NAME21",
        "fields": ["geometry"]
      }
    }
  ],

  "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.8 },

  "encoding": {
    "shape": { "field": "geometry" },
    "color": {
      "field": "Population",
      "type": "quantitative",
      "title": "Population",
      "scale": { "scheme": "blues" }
    },
    "tooltip": [
      { "field": "p_State_trim", "title": "State" },
      { "field": "p_Quarter", "title": "Quarter" },
      { "field": "Population", "title": "Population", "format": "~s" }
    ]
  }
}
